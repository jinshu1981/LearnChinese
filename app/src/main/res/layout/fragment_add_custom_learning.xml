<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.xuzhi.learnchinese.FragmentAddCustomLearning">

    <TextView android:text="名称" android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText android:text="静夜思" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView android:text="内容" android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText android:text="床前明月光" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border"
        android:gravity="top"
        android:singleLine="false"
        android:scrollHorizontally="false"
        android:minLines="8"
        android:lines="8"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:scrollbars="vertical"/>

    <Button android:id="@+id/add_custom_learning"
        android:text = "确 认"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_border"/>

</LinearLayout>
