<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jinshu.xuzhi.learnchinese.ActivityCourseDetailFragment"
    android:orientation="vertical">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/custom_learning_name"
        android:layout_gravity="center"
        android:textSize="20sp"/>
    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/custom_learning_date"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <GridView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/course_detail"
        android:columnWidth="100sp"
        android:numColumns="10"
        android:verticalSpacing="5sp"
        android:horizontalSpacing="3sp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:minWidth="45sp">
    </GridView>

</LinearLayout>
