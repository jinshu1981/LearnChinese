<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">


    <LinearLayout
        android:id = "@+id/flag_llayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">
        <ImageView android:src = "@mipmap/flag"
            android:id = "@+id/flag_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"/>
        <ImageView android:src = "@mipmap/flag"
            android:id = "@+id/flag_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/activity_horizontal_margin"
            android:visibility="gone"/>
        <ImageView android:src = "@mipmap/flag"
            android:id = "@+id/flag_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:visibility="gone"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/flag_llayout"
        android:id = "@+id/image_llayout"
        android:visibility="gone">
        <ImageView android:src = "@mipmap/read48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flag_read"
            android:padding="@dimen/activity_horizontal_margin"
            android:visibility="gone"/>
        <ImageView android:src = "@mipmap/write48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flag_write"
            android:padding="@dimen/activity_horizontal_margin"
            android:visibility="gone"/>
        <ImageView android:src = "@mipmap/good48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flag_remember"
            android:padding="@dimen/activity_horizontal_margin"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/image_llayout"
        android:id = "@+id/character_llayout">
        <TextView
            android:id = "@+id/ChineseCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="80sp"
            android:background="@drawable/card_border"
            android:textSize="100sp"/>
    </LinearLayout>

</RelativeLayout>
