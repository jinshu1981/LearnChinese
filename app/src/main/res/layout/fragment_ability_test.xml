<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xuzhi.learnchinese.AbilityTestFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout  android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/highlightpink">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="下一页"
            android:id = "@+id/next"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@mipmap/flag1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id = "@+id/flag"
            android:padding="5sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id = "@+id/learned_number"
            android:layout_gravity="center"
            android:layout_toRightOf ="@+id/flag"
            android:textStyle="bold"
            android:text = "00"
            android:layout_centerHorizontal ="true"
            android:layout_centerVertical="true"
            android:padding="5sp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="结束"
            android:id = "@+id/finish"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5sp" />
    </RelativeLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/ability_test_characters"
        android:columnWidth="90sp"
        android:numColumns="4"
        android:verticalSpacing="5sp"
        android:horizontalSpacing="5sp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:minWidth="45dp">
    </GridView>


</LinearLayout>
